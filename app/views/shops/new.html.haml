= render 'shared/error_messages'
%h1.bg-slider__title お店登録フォーム
.mdl-grid
  .mdl-layout-spacer
  .mdl-cell.mdl-cell--8-col
    = form_for(@shop, url: signup_path) do |f|
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-color-text--white
        = f.label :店名, class:'mdl-textfield__label'
        = f.text_field :name, class: 'mdl-textfield__input form-control', pattern: '.{1,}'
        %span.mdl-textfield__error= "空になっています"
      .clear
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-color-text--white
        = f.label :メールアドレス, class:'mdl-textfield__label'
        = f.text_field :email, class: 'mdl-textfield__input form-control', pattern: '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$'
        %span.mdl-textfield__error= "無効なメールアドレスです"
      .clear
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-color-text--white
        = f.label :パスワード, class:'mdl-textfield__label'
        = f.password_field :password, class: 'mdl-textfield__input form-control', pattern: '^([a-zA-Z0-9]{6,})$'
        %span.mdl-textfield__error= "半角英数字6文字以上です"
      .clear
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-color-text--white
        = f.label :確認, class:'mdl-textfield__label'
        = f.password_field :password_confirmation, class: 'mdl-textfield__input form-control', pattern: '^([a-zA-Z0-9]{6,})$'
        %span.mdl-textfield__error= "英数字6文字以上です"
      .clear
      = f.submit "出店する", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"
  .mdl-layout-spacer
