<div class="mdl-cell mdl-cell--3-col">
  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand" id="shop-<%= shop.id %>">
      <h2 class="mdl-card__title-text">
        <%= shop.name %>
      </h2>
    </div>
    <div class="mdl-card__supporting-text">
      <%= shop.profile %>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <%= link_to '入店する', shop_path(shop.id), class:'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect'%>
    </div>
  </div>
</div>
<% if shop.picture? %>
<style>
  #shop-<%= shop.id %>{
    background-image: url("<%= shop.picture.url %>");
  }
</style>
<% end %>
