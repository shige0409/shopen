<div class="mdl-cell mdl-cell--3-col">
  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand" id="product-<%= product.id %>">
      <h2 class="mdl-card__title-text">
        <%= product.name %>
      </h2>
    </div>
    <div class="mdl-card__supporting-text">
      <%= product.profile %>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <%= link_to '入店する', shop_path(product.id), class:'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect'%>
    </div>
  </div>
</div>
<% if product.picture? %>
<style>
  #product-<%= product.id %>{
    background-image: url("<%= product.picture.url %>");
  }
</style>
<% end %>
